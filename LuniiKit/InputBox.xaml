<Window x:Class="LuniiKit.InputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LuniiKit"
        mc:Ignorable="d"
        Title="InputBox" Height="80" Width="300" WindowStyle="None" Topmost="True" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <StackPanel>
            <TextBlock Text="Options" Margin="5,0,0,0" />
            <TextBox x:Name="ResponseTextBox" Margin="5,0,5,0" />
            <Button Content="OK" Click="OKButton_Click" Width="200" Margin="0,10,0,0" />
        </StackPanel>
    </Grid>
</Window>
