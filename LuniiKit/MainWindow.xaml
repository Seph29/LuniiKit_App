<Window x:Class="LuniiKit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LuniiKit"
        mc:Ignorable="d"
        Title="LuniiKit" Height="300" Width="300" ResizeMode="NoResize" Icon="/Images/icon.png" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="105*"/>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="132*"/>
        </Grid.ColumnDefinitions>
        <Image HorizontalAlignment="Center" Height="213" Margin="0,11,0,0" VerticalAlignment="Top" Width="103" Source="/Images/logo.png" Grid.Row="1"/>
        <Button x:Name="studio1" Content="STUdio 0.3.1" HorizontalAlignment="Left" Margin="10,20,0,0" VerticalAlignment="Top" Height="20" Width="152" FontFamily="Consolas" Grid.Column="1" Grid.ColumnSpan="2" Click="studio1_Click" Grid.Row="1"/>
        <Button x:Name="studio2" Content="STUdio 0.4.2" HorizontalAlignment="Left" Margin="10,45,0,0" VerticalAlignment="Top" Height="20" Width="152" FontFamily="Consolas" Grid.Column="1" Grid.ColumnSpan="2" Click="studio2_Click" Grid.Row="1"/>
        <Button x:Name="studio3" Content="STUdio 0.4.3-SNAPSHOT" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top" Height="20" Width="152" FontFamily="Consolas" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" Click="studio3_Click" Visibility="Hidden"/>
        <Button x:Name="idriver" Content="Installer driver Lunii" HorizontalAlignment="Left" Margin="10,101,0,0" VerticalAlignment="Top" Height="20" Width="152" FontFamily="Consolas" Grid.Column="1" Grid.ColumnSpan="2" Click="idriver_Click" Grid.Row="1"/>
        <Button x:Name="ijava" Content="Installer Java" HorizontalAlignment="Left" Margin="10,127,0,0" VerticalAlignment="Top" Height="20" Width="152" FontFamily="Consolas" Grid.Column="1" Grid.ColumnSpan="2" Click="Button_Click" Grid.Row="1"/>
        <Button Margin="0,233,4,0" Height="23" VerticalAlignment="Top" HorizontalAlignment="Right" Width="32" Grid.Column="2" Grid.Row="1" Click="Button_Click_3">
            <StackPanel Orientation="Horizontal">
                <Image Source="/Images/logo_discord.png" Width="20" Height="20"/>
                <TextBlock VerticalAlignment="Center" />
            </StackPanel>
        </Button>
        <Button Margin="0,233,41,0" Height="23" VerticalAlignment="Top" HorizontalAlignment="Right" Width="32" Grid.Column="2" Grid.Row="1" Click="Button_Click_4">
            <StackPanel Orientation="Horizontal">
                <Image Source="/Images/logo_github.png" Width="20" Height="20"/>
                <TextBlock VerticalAlignment="Center" />
            </StackPanel>
        </Button>
        <Button x:Name="options" Content="Options" HorizontalAlignment="Left" Margin="10,164,0,0" VerticalAlignment="Top" Height="20" Width="152" FontFamily="Consolas" Grid.Column="1" Grid.ColumnSpan="2" Click="OpenWindow" Grid.Row="1"/>
        <RichTextBox x:Name="vertext" HorizontalAlignment="Left" Margin="8,233,0,0" VerticalAlignment="Top" FontSize="8" Grid.ColumnSpan="3" Width="197" Grid.Row="1" Height="23" IsDocumentEnabled="True" IsReadOnly="True">
            <FlowDocument>
                <Paragraph>
                    <Run Text=""/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

    </Grid>
</Window>
